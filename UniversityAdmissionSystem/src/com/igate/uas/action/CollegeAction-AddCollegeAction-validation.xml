<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"  
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>

	<field name="collegeName">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Enter college name.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">3</param>
			<message>College name must be at least ${minLength} characters.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">30</param>
			<message>College name must be at most ${maxLength} characters.</message>
		</field-validator>
	</field>
	
	<field name="street">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Enter Street name.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">3</param>
			<message>Street name must be at least ${minLength} characters.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">30</param>
			<message>Street name must be at most ${maxLength} characters.</message>
		</field-validator>
	</field>
	
	<field name="landmark">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Enter nearest landmark.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">4</param>
			<message>Landmark details must be at least ${minLength} characters.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">30</param>
			<message>Landmark details must be at most ${maxLength} characters.</message>
		</field-validator>
		
	</field>
	
	<field name="city">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Enter City Name.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">2</param>
			<message>City name must be at least ${minLength} characters.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">20</param>
			<message>City name must be at most ${maxLength} characters.</message>
		</field-validator>
	</field>
	
	<field name="state">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Enter State name.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">2</param>
			<message>State name must be at least ${minLength} characters.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">20</param>
			<message>State name details must be at most ${maxLength} characters.</message>
		</field-validator>
	</field>
	
	<field name="pincode">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Enter PIN code.</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">[0-9]{6}</param>
			<message>PIN code must be 6 digits.</message>
		</field-validator>
	</field>
	
</validators>